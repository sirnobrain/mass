<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head-content %>
</head>
<body>

  <% include ../partials/navigation %>

  <div class="container">
    <div class="row">
      <div class="col l12 m12 s12">

        <h1>Add a Menu</h1>

        <% include ../partials/errors %>

        <form action="/admin/menus/add" method="post">

          <div class="row">
            <div class="input-field col s12 m12 l6">
              <input id="name" name="name" type="text" autocomplete="off" autofocus>
              <label for="name">Name</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12 m12 l6">
              <input id="description" name="description" type="text" autocomplete="off">
              <label for="description">Description</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12 m12 l6">
              <input id="price" class="numeric" name="price" type="text" autocomplete="off">
              <label for="price">Price</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12 m12 l6">
              <button type="submit" class="waves-effect waves-light btn">Submit</button>
              <a href="/admin/menus" class="waves-effect waves-light btn white black-text">Cancel</a>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>

  <% include ../partials/scripts %>
  <% include ../partials/numeric %>

</body>
</html>
